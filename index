<script>
  // Sticky call to action to maximize conversions on mobile
  const ctaBar=document.createElement('div');
  ctaBar.innerHTML='<button style="width:100%;padding:14px 0;border:0;border-radius:0;background:#0d9488;color:#fff;font-weight:700">Start Free Estimate</button>';
  ctaBar.style.cssText='position:fixed;bottom:0;left:0;right:0;z-index:50;box-shadow:0 -8px 24px rgba(0,0,0,.08);display:none';
  document.body.appendChild(ctaBar);
  ctaBar.onclick=()=>document.getElementById('lead-form').scrollIntoView({behavior:"smooth"});
  const observer=new IntersectionObserver(([e])=>{ctaBar.style.display=e.isIntersecting?'none':'block'},{threshold:0});
  observer.observe(document.getElementById('lead-form'));
</script>
